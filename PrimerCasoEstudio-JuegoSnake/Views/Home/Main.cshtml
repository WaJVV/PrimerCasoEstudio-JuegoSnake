@model PrimerCasoEstudio_JuegoSnake.Models.User
@{
    ViewData["Title"] = "Main Page";
}

@if (Model != null)
{
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-player">
                    <div class="navbar-nav ml-auto">
                        <div class="nav-item">
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.photo)" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" />
                        </div>
                        <div class="nav-item">
                            <span class="nav-link">@Model.user</span>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    </body>
}
else
{
    <div>No user data available.</div>
}

@functions {
    private string ConvertToBase64String(byte[] photo)
    {
        return Convert.ToBase64String(photo);
    }
}
