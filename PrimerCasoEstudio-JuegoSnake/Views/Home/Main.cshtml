@model PrimerCasoEstudio_JuegoSnake.Models.User
@{
    ViewData["Title"] = "Main Page";
}
<style>
    puntajes {
        font-family: Arial, sans-serif;
        display: flex;
        height: 100vh;
        margin: 0;
    }

    #contador {
        font-size: 48px;
        color: #333;
    }

</style>

@if (Model != null)
{
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-player">
                    <div class="navbar-nav ml-auto">
                        <div class="nav-item">
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.photo)" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" />
                        </div>
                        <div class="nav-item">
                            <span class="nav-link">@Model.user</span>
                        </div>
                    </div>
                </div>
                <button id="cambiarEstado" class="start">Iniciar</button>
                <button id="submitBtn" class="start">Submit to HighScore</button>
            </nav>
        </header>


        <div id="contador" class="puntajes">Tiempo:</div>
        <div id="score" class="puntajes">Puntaje:</div>

        <canvas id="board"></canvas>

        <form method="post" asp-controller="Home" asp-action="SubmitFormHighScore">

            <input type="hidden" name="time" id="hiddenTiempo" />
            <input type="hidden" name="score" id="hiddenScore" />
        </form>
        
    </body>
}
else
{
    <div>No user data available.</div>
}

@functions {
    private string ConvertToBase64String(byte[] photo)
    {
        return Convert.ToBase64String(photo);
    }
}
